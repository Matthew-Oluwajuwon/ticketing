{
  "compilerOptions": {
    "baseUrl": "./src",  // Base directory for resolving non-relative module names
    "paths": {
      "*": ["*"]  // Tells TypeScript to look for files in the `src` directory
    },
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
